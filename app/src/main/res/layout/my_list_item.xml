<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="@drawable/space3"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/frame_free1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_free11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_free12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

    </FrameLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name_of_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/_85sdp"
        android:ellipsize="end"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="@dimen/_7sdp"
        android:singleLine="true"
        android:textColor="@color/name_of_points2"
        android:textSize="@dimen/_12sdp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_points"
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="7dp"
        android:paddingBottom="@dimen/_13sdp"
        android:textColor="@color/text"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


</RelativeLayout>