<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>

        <shape android:shape="oval" >
            <gradient android:type="radial"
                android:startColor="#AFEEEE"
                android:centerColor="@color/background"
                android:endColor="@color/background"
                android:gradientRadius="60%p"/>

            <size
                android:height="@dimen/_40sdp"
                android:width="@dimen/_40sdp"/>
        </shape>

    </item>

    <item
        android:width="@dimen/_8sdp"
        android:height="@dimen/_8sdp"
        android:gravity="center_vertical|center_horizontal"
        android:drawable="@drawable/free" />


</layer-list>